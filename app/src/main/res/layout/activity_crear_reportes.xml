<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CrearReportes">
    <TextView
            android:text="REPORTES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_gravity="center" android:textSize="20sp" android:textColor="#000000"/>
    <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
            ><LinearLayout
                    android:id="@+id/scrollReporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:text="Reporte de ocurrencias de operadores matematicos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textOperadores"
                        android:layout_gravity="center" android:textSize="20sp" android:textColor="#000000"
                        android:gravity="center"/>
                <TableLayout
                        android:id="@+id/tablaReporteOperadores"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <TextView
                        android:text="Reporte de graficos definidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textGrafico"
                        android:layout_gravity="center" android:textSize="20sp" android:textColor="#000000"
                        android:gravity="center"/>
                <TableLayout
                        android:id="@+id/tablaReporteGrafico"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <TextView
                        android:text="Reporte de errores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textErrores"
                        android:layout_gravity="center" android:textSize="20sp" android:textColor="#000000"
                        android:gravity="center"/>
                <TableLayout
                        android:id="@+id/tablaReporteErrores"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            </ScrollView>
            </HorizontalScrollView>
    </ScrollView>
</LinearLayout>