<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/scroll"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".MostrarGraficos"
        android:orientation="vertical">
        <Button
                android:text="Ver Reportes Generados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/reportes"
                tools:ignore="MissingConstraints"/>
        <Button
                android:text="Ver siguiente grafica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/graficaAdelante"
                tools:ignore="MissingConstraints"/>

        <com.anychart.AnyChartView
                android:id="@+id/grafico"
                android:layout_marginVertical="15sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintBaseline_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"/>
</LinearLayout>